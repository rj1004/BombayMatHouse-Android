<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:scrollbars="none">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MasterActivity">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:id="@+id/mastertitle"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">


            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/listmastercode"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:layout_marginRight="20dp"
                    android:text="Material Code"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/listmastername"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:layout_marginRight="20dp"
                    android:text="Material Name"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:id="@+id/listmasteruom"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:layout_marginRight="20dp"
                    android:text="UOM"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/listmasterimage"
                    android:layout_marginRight="20dp"
                    android:scaleType="fitCenter"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>



            </LinearLayout>

        <View
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>

    </LinearLayout>

    <ListView
        android:layout_below="@id/mastertitle"
        android:id="@+id/masterlist"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



</RelativeLayout>
</HorizontalScrollView>